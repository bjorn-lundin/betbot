set pm3d
set title "profit f(minprice, maxprice) for ".animal." ".bet_name." ".bet_type." ".start_date."-".stop_date
set ylabel "max price"
set xlabel "min price"
set zlabel "skr"

set xyplane at 10000

splot datadir."/".datafil using 4:5:7


