SHELL=/bin/bash
#instead of that tab character...
# we use a char with ascii num less than 127, so we do not get utf-8/latin-1 trouble
# in autogenerated makefiles, like the one on kta, on Linux

#On what platform are we?
export UNAME := $(shell uname)
export UNAME.ALL := $(shell uname -a)

#Normalize the uname info a bit
ifeq ($(UNAME),Linux)
  export PLATFORM :=unix
  export OS :=Linux
endif
# Windows 2012,  and also Windows 8!
ifeq ($(UNAME),MINGW32_NT-6.2)
  export PLATFORM :=windows
  export OS :=W2k12
endif
# Windows 2008, and also Windows 7!
ifeq ($(UNAME),MINGW32_NT-6.1)
  export PLATFORM :=windows
  export OS :=W2k8
endif

export .RECIPEPREFIX = @

all : saldo_check

.PHONY : saldo_check run


saldo_check :
	gnatmake -P saldo_check.gpr

run :
	cd ../exe/ && saldo_check

